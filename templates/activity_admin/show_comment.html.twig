
{% extends "base_back.html.twig" %}
{% block content %}
	<main id="main" class="main">

		<div class="pagetitle">
			<h1>Comment details</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href={{path('admin_activities_comments')}}>Comments</a>
					</li>
					<li class="breadcrumb-item">details</li>
				</ol>
			</nav>
		</div>
		<div class="card">

			<div
				class="card-body pt-3">
				<!-- Bordered Tabs -->
				<ul class="nav nav-tabs nav-tabs-bordered" role="tablist">

					<li class="nav-item" role="presentation">
						<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview" aria-selected="true" role="tab">Overview</button>
					</li>

				</ul>
				<div class="tab-content pt-2">

					<div class="tab-pane fade profile-overview active show" id="profile-overview" role="tabpanel">
						

						<h5 class="card-title">Details</h5>

						<div class="row">
							<div class="col-lg-3 col-md-4 label ">User Email</div>
							<div class="col-lg-9 col-md-8">{{comment.email}}</div>
						</div>

						<div class="row">
							<div class="col-lg-3 col-md-4 label">User name</div>
							<div class="col-lg-9 col-md-8">{{comment.name}}</div>
						</div>

                        <div class="row">
							<div class="col-lg-3 col-md-4 label">text</div>
							<div class="col-lg-9 col-md-8">{{comment.text}}</div>
						</div>

                        <div class="row">
							<div class="col-lg-3 col-md-4 label">date</div>
							<div class="col-lg-9 col-md-8">{{comment.createdAt|date('y-m-d')}}</div>
						</div>

						<div class="row">
							<div class="col-lg-3 col-md-4 label">activity ID</div>
							<div class="col-lg-9 col-md-8">{{comment.activity.id}}</div>
						</div>

						<div class="row">
							<div class="col-lg-3 col-md-4 label">rating</div>
							<div class="col-lg-9 col-md-8">{{comment.rating}}</div>
						</div>

					</div>

					

					

					
				</div>
			</div>
			<!-- End Bordered Tabs -->

		</div>
	</main>
{% endblock %}

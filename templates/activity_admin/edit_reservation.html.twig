{% extends "base_back.html.twig" %}
{% block content %}
<main id="main" class="main">

		<div class="pagetitle">
			<h1>Edit</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href={{path('admin_activities_reservations')}}>Reservations</a>
					</li>
					<li class="breadcrumb-item">Edit</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Reservation id {{reservation.id}}</h5>
							<form method="POST" novalidate>
								{{ form_start(form) }}
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">Nbr of tickets</label>
									<div class="col-sm-10">
										{{ form_widget(form.nbrTickets, {'attr': {'class': 'form-control'}}) }}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.nbrTickets)}}</span>
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">Date</label>
									<div class="col-sm-10">
										{{ form_widget(form.date, {'attr': {'type':"text",'class': 'form-control'}}) }}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.date)}}</span>
								</div>
                                <div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">User email</label>
									<div class="col-sm-10">
										{{ form_widget(form.userEmail, {'attr': {'class': 'form-control'}}) }}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.userEmail)}}</span>
								</div>
                                <div class="row mb-3">
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary">Edit reservation</button>
									</div>
								</div>
								{{ form_end(form) }}
							</form>
						</div>

					</div>
											

</main>
{% endblock %}

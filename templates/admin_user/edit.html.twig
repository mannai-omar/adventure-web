{% extends "base_back.html.twig" %}
{% block content %}
<main id="main" class="main">

		<div class="pagetitle">
			<h1>Edit</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href={{path('app_admin_user_index')}}>Users</a>
					</li>
					<li class="breadcrumb-item">Edit</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

				

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">User id {{user.id}}</h5>
							<form id="AddForm" method="POST" enctype="multipart/form-data" novalidate>
								{{ form_start(form) }}
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">Email</label>
									<div class="col-sm-10">
										{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.email)}}</span>
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">plainPassword</label>
									<div class="col-sm-10">
										{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.plainPassword)}}</span>
								</div>

								<div class="form-check">
									{{ form_widget(form.isVerified) }}
									<label class="form-check-label" for="gridCheck1">
										is Verified
									</label>
								</div>
								<div class="row mb-3">
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary">Edit User</button>
									</div>
								</div>
								{{ form_end(form) }}
							</form>
						</div>

					</div>
											

</main>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}{{ product.name }}{% endblock %}
{% block content %}
    <!--====== Start Breadcrumb Section ======-->
        <section class="page-banner overlay pt-170 pb-170 bg_cover" style="background-image: url('{{asset('assets/images/bg/page-bg.jpg')}}');">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="page-banner-content text-center text-white">
                            <h1 class="page-title">Product Details</h1>
                            <ul class="breadcrumb-link text-white">
                                <li><a href="index.html">Home</a></li>
                                <li class="active">Product Details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section><!--====== End Breadcrumb Section ======-->
        <!--====== Start Shop Details Section ======-->
        <section class="shop-details-section pt-100 pb-50">
            <div class="container">
                <div class="product-details-wrapper">
                    <div class="row align-items-xl-center">
                        <div class="col-lg-6">
                            <!--=== Product Gallery ===-->
                            <div class="product-gallery-area mb-50 wow fadeInLeft">
                                <div class="product-big-slider mb-30">
                                    <div class="product-img">
                                        <a href="{{ asset('uploads/' ~ product.image) }}" class="img-popup"><img src="{{ asset('uploads/' ~ product.image) }}" alt="Product" width="400px" height="400px"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="product-info mb-50 pl-lg-70 wow fadeInRight">
                                <h4 class="title">{{product.name}}</h4>
                                <ul class="ratings">
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><i class="fas fa-star"></i></li>
                                    <li><a href="#">4.9(Customer Reviews)</a></li>
                                </ul>
                                <span class="price"><span class="currency">$</span>{{product.price}}</span>
                                <p></p>
                                <ul class="product-meta pb-35 mb-40">
                                    <li><span>{{product.category.name}}</span></li>
                                </ul>
                                {{form_start(form, {'attr': {'class': 'mt-4 p-4 bg-darl'}})}}
                                <div class="form-group">
                                    {{form_label(form.quantity)}}
                                    {{form_widget(form.quantity,{
                                        'attr':{
                                            'class':'form-control'~(form.quantity.vars.valid ?'':'is-invalid')
                                        }
                                    })}}
                                    <div class="invalid-feedback">
                                        {{form_errors(form.quantity)}}
                                    </div>
                                </div>
                                {{form_widget(form.add,{'attr':{'class':'btn btn-success w-25 mt-2'}})}}
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-8">
                            <div class="description-wrapper mt-30 wow fadeInUp">
                                <div class="description-tabs mb-10">
                                    <ul class="nav">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-bs-toggle="tab" href="#descrptions">Description</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content wow fadeInUp">
                                    <div class="tab-pane fade show active" id="descrptions">
                                        <div class="content-box">
                                            <p>{{product.description}}</p>
                                            </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!--====== End Shop Details Section ======-->
        <!--====== Start Recent Product Section ======-->
        <section class="recent-product-section pb-40">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-center mb-50">
                            <h2>Related Products</h2>
                        </div>
                    </div>
                </div>
                <div class="slider-active-3-item wow fadeInDown">
                
                    <!--=== Single Product Item ===-->
                    {%for produit in related %}
                    <div class="single-product-item mb-50">
                        <div class="img-holder">
                            <img src="{{ asset('uploads/' ~ produit.image) }}" alt="Product Image" height="300px" width="300px" style="object-fit: cover;">
                        </div>
                        <div class="content">
                            <div class="info">
                                <h4 class="title"><a href="products-details.html">{{produit.name}}</a></h4>
                                <span class="price"><span class="currency">$</span>{{produit.price}}</span>
                            </div>
                            <ul class="ratings">
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                                <li><i class="fas fa-star"></i></li>
                            </ul>
                        </div>
                    </div>
                    {%endfor%}
                </div>
            </div>
        </section>
{% endblock %}
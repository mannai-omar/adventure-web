
{% extends "admin_dashboard/base_back.html.twig" %}{% block content %}
<main id="main" class="main">

		<div class="pagetitle">
			<h1>Edit</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href={{path('admin_product_index')}}>Reservations</a>
					</li>
					<li class="breadcrumb-item">Edit</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">product id {{product.id}}</h5>
						<form id="AddForm" method="POST" enctype="multipart/form-data" novalidate>
							{{ form_start(form,{'method': 'POST'}) }}
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">name</label>
									<div class="col-sm-10">
										{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(form.name)}}
									</div>
									
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">Description</label>
									<div class="col-sm-10">
										{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(form.description)}}
									</div>
									<span class="error-message text-danger">{{ form_errors(form.description)}}</span>
								</div>
                                <div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">price</label>
									<div class="col-sm-10">
										{{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(form.price)}}
									</div>
									
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">quantity</label>
									<div class="col-sm-10">
										{{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(form.quantity)}}
									</div>
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">categorie</label>
									<div class="col-sm-10">
										{{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(form.category)}}
									</div>
								</div>
								<div class="row mb-3">
									<label for="inputText" class="col-sm-2 col-form-label">image</label>
									<div class="col-sm-10">
										{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
									</div>
									{{ form_errors(form.image)}}
								</div>
                                <div class="row mb-3">
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary">Edit product</button>
									</div>
								</div>
								{{ form_end(form) }}
							</form>
						</div>

					</div>
											

</main>
{% endblock %}

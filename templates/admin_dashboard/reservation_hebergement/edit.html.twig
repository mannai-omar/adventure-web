{% extends "base_back.html.twig" %}

{% block content %}
<main id="main" class="main">
    <div id="flash-messages">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
    </div>
    <div class="pagetitle">

        <nav style="--bs-breadcrumb-divider: '/';">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a  href="">Home</a></li>
                <li class="breadcrumb-item">Reservation</li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
    <section class="section">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Reservation</h5>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Check in date</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.dateDeb, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message text-danger">{{ form_errors(form.dateDeb)}}</span>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Check out date</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message text-danger">{{ form_errors(form.dateFin)}}</span>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Adult number</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nbrAdulte, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message text-danger">{{ form_errors(form.nbrAdulte)}}</span>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Youth number</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nbrJeune, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message text-danger">{{ form_errors(form.nbrJeune)}}</span>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Child number</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nbrEnfant, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <span class="error-message text-danger">{{ form_errors(form.nbrEnfant)}}</span>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
</main>
{% endblock %}
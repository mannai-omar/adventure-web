{% extends "admin_dashboard/base_back.html.twig" %}
{% block content %}
    <main id="main" class="main">
        <div id="flash-messages">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{message}}
                </div>
            {% endfor %}
        </div>
        <div class="pagetitle">
            <nav style="--bs-breadcrumb-divider: '/';">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a  href="">Home</a></li>
                    <li class="breadcrumb-item">Reservation</li>
                    <li class="breadcrumb-item active">Show</li>
                </ol>
            </nav>
        </div>
        <!-- End Page Title -->
        <section class="section">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">ID :</h6>
                    <p class="card-text">{{ reservation.id }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">Check in date :</h6>
                    <p class="card-text">{{ reservation.dateDeb }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">Check out date :</h6>
                    <p class="card-text">{{ reservation.dateFin }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">State :</h6>
                    <p class="card-text">{{ reservation.etat }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">Adult number :</h6>
                    <p class="card-text">{{ reservation.nbrAdulte }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">Youth number :</h6>
                    <p class="card-text">{{ reservation.nbrJeune }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">Child number :</h6>
                    <p class="card-text">{{ reservation.nbrEnfant }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">CreatedAt :</h6>
                    <p class="card-text">{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                    <h6 class="card-subtitle mb-2 text-dark-emphasis">UpdatedAt :</h6>
                    <p class="card-text">{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : ''}}</p>
                    <div class="btn-group,card-text" role="group" aria-label="Basic mixed styles example">
                        <a href="{{ path('app_reservation_hebergement_edit', {'id': reservation.id}) }}" class="btn btn-outline-success">Edit</a>
                        <a href="{{ path('app_reservation_hebergement_delete', {'id': reservation.id}) }}" class="btn btn-outline-danger">Delete</a>
                    </div>

                </div>
            </div>
        </section>
    </main>
    <!-- End #main -->
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Hebergements{% endblock %}
{% block content %}

<section class="page-banner overlay pt-170 pb-220 bg_cover" style="background-image: url('{{asset('hebergements/Bg/imagelogement.jpg')}}');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="page-banner-content text-center text-white">
                    <h1 class="page-title">Accommodations and Guest Houses</h1>
                </div>
            </div>
        </div>
    </div>
</section><!--====== End Breadcrumb Section ======-->
<!--====== Start Booking Section ======-->
    <section class="booking-form-section pb-100">
        <div class="container-fluid">
            <div class="booking-form-wrapper p-r z-2">
                <form action="index-2.html" class="booking-form-two">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" name="nbrPersonne">
                    </div>
                    <div class="form-group">
                        <span>Nombre de places</span>
                        <label><i class="far fa-name"></i></label>
                        <input type="number" class="form-control"  name="nbrPersonne">
                    </div>
            <div class="form-group ">
                <span> Adresse</span>
                <select class="wide" name="adresse">
                    <option data-display="Select Address">Select Address</option>
                    <option value="Tunis">Tunis</option>
                    <option value="Sousse">Sousse</option>
                    <option value="Sfax">Sfax</option>
                    <!-- Add other Tunisian cities here -->
                </select>
            </div>
            <div class="form-group">
                <button class="booking-btn">Check Availability <i class="far fa-angle-double-right"></i></button>
            </div>
            </form>
            </div>
        </div>
    </section><!--====== End Booking Section ======-->
<!--====== Start Places Section ======-->
<section class="places-section pb-100">
    <div class="container">
        <div class="row justify-content-center">
            {% for hebergement in hebergements %}
            <div class="col-xl-4 col-md-4 col-sm-12 places-column">
                <!--=== Single Place Item ===-->
                <div class="single-place-item mb-60 wow fadeInUp">
                    <div class="place-img">
                        <img src="{{asset('hebergements/' ~ hebergement.image)}}" alt="{{ hebergement.nom }}" style="width: 410px; height: 280px; object-fit: cover;"/>
                    </div>
                    <div class="place-content">
                        <div class="info">
                            <h4 class="title"><a href="{{ path('app_reservation_hebergement_new', {'id': hebergement.id}) }}">{{ hebergement.nom }}</a></h4>
                            <p class="location"><i class="far fa-map-marker-alt"></i>{{ hebergement.adresse }}</p>
                            <p><span><i class="far fa-user"></i>{{ hebergement.nbrplace }}</span> </p>
                            <div class="meta">
                                <p class="price">
                                    <span class="currency">{{ hebergement.TypeHebergement.nom  }}</span>
                                    <span class="currency">{{ hebergement.HostService.nom  }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
         <div class="row">
            <div class="col-lg-12">
                <!--=== Gowilds Pagination ===-->
                <ul class="gowilds-pagination wow fadeInUp text-center">
                    <li class="active">{{ knp_pagination_render(hebergements) }}</li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}